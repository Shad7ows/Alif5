دالة سقوط(الارتفاع_الاولي, الجاذبية = 9.81, خطوات_الزمن = 0.1):
	الارتفاع = الارتفاع_الاولي
	الزمن = 0
	بينما الارتفاع > 0:
		الارتفاع = الارتفاع_الاولي - 0.5 * الجاذبية * الزمن ^ 2
		اذا الارتفاع < 0:
			الارتفاع = 0
		اطبع(م"الزمن: {الزمن} ث, الارتفاع: {الارتفاع} م")
		الزمن += خطوات_الزمن
	اطبع("الكرة اصطدمت بالارض")

سقوط(الارتفاع_الاولي=100)